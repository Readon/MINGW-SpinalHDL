_realname=python-cocotb
pkgbase=mingw-w64-${_realname}
pkgname="${MINGW_PACKAGE_PREFIX}-${_realname}"
pkgver="v1.9.2"
pkgrel=1
pkgdesc="a coroutine based cosimulation library for writing VHDL and Verilog testbenches in Python"
arch=("any")
mingw_arch=('mingw32' 'mingw64' 'ucrt64')
url="https://github.com/cocotb/cocotb"
groups=("${MINGW_PACKAGE_PREFIX}-eda")
license=("custom:ISC")
#options=("!strip")
depends=(
  "${MINGW_PACKAGE_PREFIX}-python"
  "${MINGW_PACKAGE_PREFIX}-gcc"
  "${MINGW_PACKAGE_PREFIX}-python-pytest"
)
makedepends=("git"
  "${MINGW_PACKAGE_PREFIX}-python-pip"
  "${MINGW_PACKAGE_PREFIX}-python-wheel"
  "${MINGW_PACKAGE_PREFIX}-python-setuptools"
)
source=(
	"${_realname}::git+https://github.com/cocotb/cocotb.git"
)
sha256sums=(
	"SKIP"
)

prepare() {
  cd "${srcdir}/${_realname}"
  git checkout tags/${pkgver}
}

build() {
  cd "${srcdir}/${_realname}"
  DISTUTILS_DEBUG=1 \
  ${MINGW_PREFIX}/bin/python setup.py build_ext
}

package() {
	cd "${srcdir}/${_realname}"
  MSYS2_ARG_CONV_EXCL="--prefix=;--install-scripts=;--install-platlib=" \
  DISTUTILS_DEBUG=1 \
  ${MINGW_PREFIX}/bin/python setup.py install --prefix=${MINGW_PREFIX} \
                          --root="${pkgdir}" --optimize=1
}
