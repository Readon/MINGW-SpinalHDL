_realname=python-cocotb
pkgbase=mingw-w64-${_realname}
pkgname="${MINGW_PACKAGE_PREFIX}-${_realname}"
pkgver="v1.8.1"
pkgrel=1
pkgdesc="a coroutine based cosimulation library for writing VHDL and Verilog testbenches in Python"
arch=("any")
mingw_arch=('mingw32' 'mingw64' 'ucrt64')
url="https://github.com/cocotb/cocotb"
groups=("${MINGW_PACKAGE_PREFIX}-eda")
license=("custom:ISC")
#options=("!strip")
depends=(
  "${MINGW_PACKAGE_PREFIX}-python"
  "${MINGW_PACKAGE_PREFIX}-gcc"
  "${MINGW_PACKAGE_PREFIX}-python-pytest"
)
makedepends=("git")
source=(
	"${_realname}::git+https://github.com/cocotb/cocotb.git"
)
sha256sums=(
	"SKIP"
)

prepare() {
  cd "${srcdir}/${_realname}"
  git checkout tags/${pkgver}
}

package() {
	cd "${srcdir}/${_realname}"
	PREFIX="${MINGW_PREFIX}" CC="c++" DESTDIR="${pkgdir}" pip3 install --global-option build_ext --global-option --compiler=mingw32 --no-build-isolation .
}
